<!-- login-page.component.html -->
<div class="login-container">
  <mat-card class="login-card">
    <mat-card-header>
      <mat-card-title>
        <mat-icon class="logo-icon">store</mat-icon>
        MediaStore
      </mat-card-title>
      <mat-card-subtitle>
        {{ requiresTwoFactor ? 'Verificación en dos pasos' : 'Iniciar sesión' }}
      </mat-card-subtitle>
    </mat-card-header>

    <mat-card-content>
      <!-- Login Form -->
      <form *ngIf="!requiresTwoFactor" [formGroup]="loginForm" (ngSubmit)="onLogin()">
        <mat-form-field appearance="outline" class="full-width">
          <mat-label>Usuario o Email</mat-label>
          <input matInput formControlName="username" placeholder="Ingresa tu usuario">
          <mat-icon matSuffix>person</mat-icon>
          <mat-error *ngIf="loginForm.get('username')?.hasError('required')">
            Este campo es requerido
          </mat-error>
        </mat-form-field>

        <mat-form-field appearance="outline" class="full-width">
          <mat-label>Contraseña</mat-label>
          <input 
            matInput 
            [type]="hidePassword ? 'password' : 'text'"
            formControlName="password" 
            placeholder="Ingresa tu contraseña"
          >
          <button 
            mat-icon-button 
            matSuffix 
            type="button"
            (click)="hidePassword = !hidePassword"
          >
            <mat-icon>{{ hidePassword ? 'visibility_off' : 'visibility' }}</mat-icon>
          </button>
          <mat-error *ngIf="loginForm.get('password')?.hasError('required')">
            Este campo es requerido
          </mat-error>
        </mat-form-field>

        <div class="form-actions">
          <a routerLink="/auth/forgot-password" class="forgot-password">
            ¿Olvidaste tu contraseña?
          </a>
        </div>

        <button 
          mat-raised-button 
          color="primary" 
          type="submit"
          class="full-width"
          [disabled]="isLoading"
        >
          <span *ngIf="!isLoading">Iniciar sesión</span>
          <mat-spinner *ngIf="isLoading" diameter="24"></mat-spinner>
        </button>
      </form>

      <!-- Two Factor Form -->
      <form *ngIf="requiresTwoFactor" [formGroup]="twoFactorForm" (ngSubmit)="onVerifyTwoFactor()">
        <div class="two-factor-info">
          <mat-icon class="info-icon">lock</mat-icon>
          <p>Ingresa el código de verificación de 6 dígitos generado por tu aplicación de autenticación</p>
        </div>

        <mat-form-field appearance="outline" class="full-width">
          <mat-label>Código de verificación</mat-label>
          <input 
            matInput 
            formControlName="code" 
            placeholder="000000"
            maxlength="6"
            (input)="onCodeInput($event)"
          >
          <mat-icon matSuffix>security</mat-icon>
          <mat-error *ngIf="twoFactorForm.get('code')?.hasError('required')">
            Este campo es requerido
          </mat-error>
          <mat-error *ngIf="twoFactorForm.get('code')?.hasError('minlength')">
            El código debe tener 6 dígitos
          </mat-error>
        </mat-form-field>

        <div class="two-factor-actions">
          <button 
            mat-button 
            type="button"
            (click)="goBackToLogin()"
          >
            <mat-icon>arrow_back</mat-icon>
            Volver
          </button>
          <button 
            mat-raised-button 
            color="primary" 
            type="submit"
            class="verify-button"
            [disabled]="isLoading"
          >
            <span *ngIf="!isLoading">Verificar</span>
            <mat-spinner *ngIf="isLoading" diameter="24"></mat-spinner>
          </button>
        </div>
      </form>

      <div class="register-section" *ngIf="!requiresTwoFactor">
        <mat-divider></mat-divider>
        <p class="register-text">¿No tienes una cuenta?</p>
        <a mat-stroked-button routerLink="/auth/register" class="full-width">
          Crear cuenta
        </a>
      </div>
    </mat-card-content>
  </mat-card>
</div>
